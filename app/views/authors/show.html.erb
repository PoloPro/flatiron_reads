<div>
  <hr>

  <h2>
    <%= @author.name %>
  </h2>

  <h3>Books</h3>

  <% @author.books.each do |book| %>

  <div>
    <hr>
    <h4><%= link_to book.title, book %></h4>

    <div class="row">

      <div class="col-sm-4">
        <div class="parent-300">
          <img src="<%= book.image_url %>">
        </div>
      </div>

      <div class="col-sm-4">
        <div class="">
          <%= book.synopsis %>
        </div>

        <h4>Average Rating <small>(<%= book.reviews.count %>) reviews</small></h4>
        <ul class="list-inline">
          <% score = book.average_rating.to_i %>
          <% score.times do %>
          <li class="star">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/29/Gold_Star.svg/1000px-Gold_Star.svg.png">
          </li>
          <% end %>
        </ul>
      </div>

    </div>

    <% end %>

    <hr>
    <br>
    <ul class="list-inline">
      <li><%= link_to "Edit this author", edit_author_path(@author) %></li>
      <li><%= link_to "Delete this author", @book, method: :delete, data: { confirm: "Would you really like to delete this author?" } %></li>
    </ul>
  </div>
